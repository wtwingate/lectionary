<div class="max-w-prose mx-auto">
  <div class="my-16 flex flex-wrap justify-between items-center">
    <h1 class="text-4xl font-bold text-<%= @day.color %>">
      <%= @day.name %><%= ": #{@day.service}" if @day.service %>
    </h1>
    <div data-controller="clipboard">
      <button data-action="clipboard#copy" title="Copy to clipboard">
        <div class="text-3xl">
          <i data-clipboard-target="copyIcon" class="fa-regular fa-copy"></i>
        </div>
      </button>
    </div>
  </div>

  <h2 class="text-2xl mt-8 font-bold text-<%= @day.color %>">
    Collect of the Day
  </h2>
  <% @day.collects.each do |collect| %>
    <p class="my-4"><%= collect.text %></p>
  <% end %>

  <div class="[&>p]:my-4">
    <% @day.lessons.each do |lesson| %>
      <h2 class="mt-8 text-2xl font-bold text-<%= @day.color %>">
        <%= lesson.passages.first.reference %>
      </h2>
      <%= lesson.passages.first.get_html.html_safe %>
    <% end %>
  </div>

  <%= javascript_tag do %>
    copyText = `<%= @copy_text.join("\n\n") %>`;
  <% end %>
</div>
